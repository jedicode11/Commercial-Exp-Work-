<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_light">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey_dark"
        android:gravity="center"
        android:singleLine="true"
        android:tag="ERROR_PAGE_TITLE"
        android:text="@string/ERROR_PAGE_TITLE"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_100" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:singleLine="true"
        android:tag="ERROR_MESSAGE_INTRO"
        android:text="@string/ERROR_MESSAGE_INTRO"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_80" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_size_80"
        tools:text="Message" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/message"
        android:layout_marginTop="40dp"
        android:background="@color/grey_middle">

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.MobileEntry.Button.Flat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="CLOSE_BUTTON_TEXT"
            android:text="@string/CLOSE_BUTTON_TEXT" />

    </FrameLayout>
</RelativeLayout>
