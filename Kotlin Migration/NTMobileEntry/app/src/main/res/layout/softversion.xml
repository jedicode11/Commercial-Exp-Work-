<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_message"
        style="@style/Text.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_init"
        android:layout_centerHorizontal="true"
        android:tag="APP_INIT_ERROR"
        android:text="@string/APP_INIT_ERROR"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_info"
        style="@style/Text.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="50dp"
        android:tag="SOFTWARE_VERSIONS_UPDATE_INFO"
        android:text="@string/SOFTWARE_VERSIONS_UPDATE_INFO" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_info"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:paddingRight="@dimen/text_software"
                android:tag="SOFTWARE_VERSIONS_APP_LABEL"
                android:text="@string/SOFTWARE_VERSIONS_APP_LABEL" />


            <TextView
                android:id="@+id/app"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT" />

            <TextView
                android:id="@+id/appNew"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/label4"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:paddingRight="@dimen/text_software"
                android:tag="SOFTWARE_VERSIONS_LIBRARY_LABEL"
                android:text="@string/SOFTWARE_VERSIONS_LIBRARY_LABEL" />

            <TextView
                android:id="@+id/lib"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT" />

            <TextView
                android:id="@+id/libNew"
                style="@style/TextSmallRed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"

                android:paddingRight="@dimen/text_software"
                android:tag="SOFTWARE_VERSIONS_LANGUAGES_LABEL"
                android:text="@string/SOFTWARE_VERSIONS_LANGUAGES_LABEL" />

            <TextView
                android:id="@+id/lang"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT" />

            <TextView
                android:id="@+id/langNew"
                style="@style/TextSmallRed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:paddingRight="@dimen/text_software"
                android:tag="SOFTWARE_VERSIONS_BORDERS_LABEL"
                android:text="@string/SOFTWARE_VERSIONS_BORDERS_LABEL" />

            <TextView
                android:id="@+id/border"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT" />

            <TextView
                android:id="@+id/borderNew"
                style="@style/TextSmallRed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/localConfigLabel"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:paddingRight="@dimen/text_software"
                android:tag="SOFTWARE_VERSIONS_LOCAL_CONFIG_LABEL"
                android:text="@string/SOFTWARE_VERSIONS_LOCAL_CONFIG_LABEL" />

            <TextView
                android:id="@+id/local"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:text="" />

            <TextView
                android:id="@+id/localNew"
                style="@style/TextSmallRed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_CODES_ON_DEVICE_LABEL"
                android:text="@string/codes_on_device" />

            <TextView
                android:id="@+id/soft_ver"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT" />

            <TextView
                android:id="@+id/soft_verNew"
                style="@style/TextSmallRed"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="4"
                android:tag="SOFTWARE_VERSIONS_NONE_TEXT"
                android:text="@string/SOFTWARE_VERSIONS_NONE_TEXT"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>