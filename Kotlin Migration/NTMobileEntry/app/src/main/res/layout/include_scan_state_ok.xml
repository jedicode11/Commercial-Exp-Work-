<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.ScanActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="32dp"
        android:gravity="center"
        android:singleLine="true"
        android:tag="SCAN_OK_TEXT"
        android:text="@string/SCAN_OK_TEXT"
        android:textColor="@color/green_light"
        android:textSize="@dimen/text_size_500"
        app:drawableLeftCompat="@drawable/scan_ok"
        app:drawableStartCompat="@drawable/scan_ok" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scan_reduced_asterisk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/OK_BUTTON_TEXT"
            android:src="@drawable/ic_reduced_asterisk"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:freezesText="true"
            android:gravity="center"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_80"
            tools:text="infotext\n2 lines possible" />
    </LinearLayout>
</LinearLayout>
