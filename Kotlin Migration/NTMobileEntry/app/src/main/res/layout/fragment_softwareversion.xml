<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/device_init"
        style="@style/TextHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:tag="SOFTWARE_VERSIONS_TITLE"
        android:text="@string/SOFTWARE_VERSIONS_TITLE" />


    <include
        android:id="@+id/soft_ver"
        layout="@layout/softversion"

        android:layout_width="379dp"
        android:layout_height="549dp"

        android:layout_above="@+id/start_login"
        android:layout_below="@+id/device_init"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/start_login"
        style="@style/ButtonGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:tag="TO_LOGIN_BUTTON_TEXT"
        android:text="@string/TO_LOGIN_BUTTON_TEXT" />

</RelativeLayout>

