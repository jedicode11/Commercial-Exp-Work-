<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    tools:context=".ui.view.BarcodeInputView">

    <EditText
        android:id="@+id/et_barcode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:hint="@string/SCAN_INPUT_FIELD_TEXT"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:tag="SCAN_INPUT_FIELD_TEXT"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_size_100" />

    <FrameLayout
        android:id="@+id/frame_keyboard"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/grey_middle">

        <ImageButton
            android:id="@+id/btn_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:contentDescription="@string/cd_keyboard"
            android:src="@drawable/ic_keyboard" />

    </FrameLayout>
</merge>
